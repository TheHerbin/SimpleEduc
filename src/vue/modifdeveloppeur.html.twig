{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier un Developpeur
{% endblock %}

{% block contenu %}
	{{parent()}}
	{% if form.valide == true %}
	<h1>{{form.message}}</h1>
	{% else %}
    {% if form.developpeur is defined %}
	{% if form.developpeur != null %}
	<div class="container">
		<div class="row justify-content-center">

			<form action="index.php?page=modifdeveloppeur" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Modification d'un developpeur</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="exampleInputPassword1">nom</label>
						<input class="form-control" id="exampleInputPassword1" name="nom" placeholder="Votre mdp ici"  type="text" value="{{form.developpeur.nom}}">
					</div>
					<div class="form-group">
						<label for="exampleInputName1">Prénom</label>
						<input class="form-control" id="exampleInputname1" name="prenom"  type="text" value="{{form.developpeur.prenom}}">
					</div>
					<div class="form-group">
						<label for="exampleInputfirstname1">Indice rémunération</label>
						<input class="form-control" id="exampleInputFirstName1" name="indiceremuneration" value="{{form.developpeur.indiceremuneration}}" type="text">
					</div>
					<div class="form-group">
						<label for="exampleInputphone1">Cout Horaire
						</label>
						<input class="form-control" id="exampleInputphone" name="couthoraire" type="tel" value="{{form.developpeur.couthoraire}}" >
					</div>
					
					<input type="hidden" name="id" value="{{form.developpeur.id}}"/>
					
					

					<button type="submit" name="btEnvoyer" class="btn btn-primary">Modifier</button>
				</fieldset>
			</form>


            {% else %}
		
					
{% endif %} {% endif %} 

{% endif %} 
		</div>
	</div>
	
{% endblock %}
