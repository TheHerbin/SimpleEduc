{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Ajout d'un developpeur
{% endblock %}

{% block contenu %}
	{{parent()}}

	{% if form.valide is defined %}
		{% if form.valide == true %}
			<h1>Inscription réussie</h1>
			
	{% else %}
		<h1>Echec de l'inscription</h1>
		<h1>
			<a href="index.php?page=ajoutdeveloppeur">retour sur la page d'ajout </a>
		</h1>
	{% endif %}
{% else %}

	<div class="container">
		<div class="row justify-content-center">

			<form action="index.php?page=ajoutdeveloppeur" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Ajout d'un développeur</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="exampleInputName1">Nom *</label>
						<input class="form-control" id="exampleInputname1" name="nom" placeholder="Dupont" type="text">
					</div>
					<div class="form-group">
						<label for="exampleInputfirstname1">Prénom *</label>
						<input class="form-control" id="exampleInputFirstName1" name="prenom" placeholder="Richard" type="text">
					</div>
					<div class="form-group">
						<label for="exampleInputphone1">Indice rémunération *
						</label>
						<input class="form-control" id="exampleInputphone" name="indiceremuneration" type="number" step="0.01">
					</div>
                    <div class="form-group">
						<label for="exampleInputphone1">Cout horaire *
						</label>
						<input class="form-control" id="exampleInputphone" name="couthoraire" type="number" step="0.01">
					</div>
					

					<button type="submit" name="envoyer" class="btn btn-primary">Envoyer</button>
				</fieldset>
			</form>
		</div>
	</div>
{% endif %}{% endblock %}
