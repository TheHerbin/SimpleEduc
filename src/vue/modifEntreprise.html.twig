{% extends "base.html.twig" %}
{% block title %}
	{{ parent() }}
	Modifier une Entreprise
{% endblock %}

{% block contenu %}
	{{parent()}}
	{% if form.valide == true %}
	<h1>{{form.message}}</h1>
	{% else %}
    {% if form.Entreprise is defined %}
	{% if form.Entreprise != null %}
	<div class="container">
		<div class="row justify-content-center">

			<form action="index.php?page=modifEntreprise" method="post" enctype="application/x-www-form-urlencoded">
				<fieldset>
					<legend>Modification d'une Entreprise</legend>
					<div class="form-group row"></div>
					<div class="form-group">
						<label for="exampleInputPassword1">nom</label>
						<input class="form-control" id="exampleInputPassword1" name="nom" type="text" value="{{form.Entreprise.nom}}">
					</div>
					<div class="form-group">
						<label for="exampleInputName1">Adresse</label>
						<input class="form-control" id="exampleInputname1" name="adresse"  type="text" value="{{form.Entreprise.adresse}}">
					</div>
					<div class="form-group">
						<label for="exampleInputfirstname1">Téléphone</label>
						<input class="form-control" id="exampleInputFirstName1" name="tel" type="text" value="{{form.Entreprise.tel}}" >
					</div>
					
					<input type="hidden" name="id" value="{{form.Entreprise.id}}"/>
					
					

					<button type="submit" name="btEnvoyer" class="btn btn-primary">Modifier</button>
				</fieldset>
			</form>

			</div>
			</div>
            {% else %}
		
					
{% endif %} {% endif %} 

{% endif %} 
	
	
{% endblock %}
